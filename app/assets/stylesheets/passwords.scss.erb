.password-new{
    h2{
        padding: 0 0 3% 0;
        font-size: 2rem;
    }

    .send{
        height: 100px;
        margin: 0 auto;
        position: relative;

        p{
            font-size: 1.5rem;
            position: absolute;
            left: 20%;
        }

        .send-logo{
            width: 100px!important;
            height: 100px!important;
            position: absolute;
            left: 60%;
        }
    }

    .btn{
        width: 100%;
    }

    .top{
    height: auto;
    width: 100%;
    max-width: 60px;
    min-width: 30px;
    z-index: 5;
    opacity: 0.4;
    position: fixed;
    bottom: 40px;
    right: 40px;
    }
    .top:hover{
        opacity: 1;
        cursor: pointer;
    }

}

