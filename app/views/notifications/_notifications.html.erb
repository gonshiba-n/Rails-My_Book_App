<% notifications.each do |notification|%>
    <% visitor = User.find(notification.visitor_id) %>
    <% visited = notification.visited %>

    <div class="col-md-12 mx-auto">
        <form class="form-inline">
        <span>
            <% if visitor.user_image.attached? %>
                <%= image_tag visitor.user_image.variant(resize:'40x40').processed %>
            <% else %>
                <%= image_tag("user_default.jpeg", :size => "30x30") %>
            <% end %>

            <strong><%= visitor.name %></strong>
            さんが

        <% case notification.action %>
            <% when 'follow' then %>
                <%= "あなたをフォローしました" %>
            <% when 'favorite' then %>
                <%= link_to 'あなたの投稿', notification.content.name, style: "font-weight: bold;" %>をお気に入りに登録しました"
            <% when 'comment' then %>
                <% if notification.content.user_id == visited.id %>
                    <%= link_to "あなたの投稿", time_line_path(notification.content_id), style: "font-weight: bold;" %>
                <% else %>
                    <span>
                        <%= link_to content_path(notification.content) do %>
                            <% if visitor.user_image.attached? %>
                                <%= image_tag notification.content.user.user_image.variant(resize:'40x40').processed %>
                            <% else %>
                                <%= image_tag("user_default.jpeg", :size => "30x30") %>
                            <% end %>
                        <% end %>
                    </span>
                <% end %>
                <strong>
                    <%= notification.content.user.name + 'さんの投稿' %>"にコメントしました"
                </strong>
                <p class-"text-muted.mb-0">
                    <%= Comment.find_by(id: notification.comment_id)&.comment %>
                </p>
                <div class="small.text-muted.text-right">
                <%= time_ago_in_words(notification.created_at).upcase %>
                <hr>
        <% end %>
    </div>
<% end %>
