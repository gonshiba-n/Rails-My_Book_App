
<section class="index container">
  <div class="row">
  <div class="col-md-8 sign_in" style="max-width:600px;">
    <h2>Loginsession</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :name, "アカウント名", for: 'name' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', id: 'name', type: 'name' %>
      </div>

      <div class="form-group">
        <%= f.label :email, for: 'email' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'email' %>
      </div>

      <div class="form-group">
        <%= f.label :password, for: 'password' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'password'%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'submit btn btn-primary'%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</section>