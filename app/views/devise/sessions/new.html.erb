
<section class="index container">
  <div class="row">
  <div class="col-md-8 sign_in" style="max-width:600px;">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%#エラーメッセージ表示%>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <% end %>
      <% if @recruiter.nil? %>
        <div class="form-group">
          <%= f.label :name, "アカウント名", for: 'name' %>
          <%= f.text_field :name, autofocus: true, autocomplete: "current-user", class: 'form-control', id: 'name', type: 'name' %>
        </div>

        <div class="form-group">
          <%= f.label :email, for: 'email' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "current-email", class: 'form-control', id: 'email' %>
        </div>

        <div class="form-group">
          <%= f.label :password, for: 'password' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'password'%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: 'submit btn btn-primary'%>
        </div>

      <% else %>
              <div class="form-group">
          <%= f.label :name, "アカウント名", for: 'name' %>
          <%= f.text_field :name, value: @recruiter.name, autofocus: true, autocomplete: "current-user", class: 'form-control', id: 'name', type: 'name' %>
        </div>

        <div class="form-group">
          <%= f.label :email, for: 'email' %>
          <%= f.email_field :email, value: @recruiter.email, autofocus: true, autocomplete: "current-email", class: 'form-control', id: 'email' %>
        </div>

        <div class="form-group">
          <%= f.label :password, for: 'password' %>
          <%= f.password_field :password, value: @pass, autocomplete: "current-password", class: 'form-control', id: 'password'%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: 'submit btn btn-primary'%>
        </div>
      <% end %>
    <% end %>

    <%= link_to "新規登録", root_path, class: 'd-block' %>
    <%= link_to "パスワードをお忘れの方", new_user_password_path, class: 'd-block' %>
    </div>
  </div>
</section>