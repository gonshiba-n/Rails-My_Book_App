<div class="container-sm index">
    <% if flash.notice.present?%>
        <div class="alert alert-success alert-dismissible fade show" role="alert"><%= flash[:notice] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <%end%>

 <%#ユーザー=============================%>
    <section>
        <div class="row user-profile">
            <div class="col-md-3 user-introduction">
                <%= image_tag 'IMG_3016.JPG',class: 'user_image' %>
            </div>
            <div class="user-discription col-md-8">
                <h2>USER_NAME</h2>
                <p>R2.2からRubyとRails学習開始。エンジニアになることが目標です。
                家族とプログラミングが大好きです。普段は製造業の品質関係に携わっています。
                ゆるゆるとプログラミングと学習内容について呟きます。プログラミング仲間募集中です！
                気軽に絡んでください目が笑っている笑顔※勧誘系DMは返せません
                日々、一歩ずつでも絶対に前進して行く！</p>
                <div class="row">
                    <div class="col-md-3 follow">
                        フォロー
                    </div>
                    <div class="col-md-3 follower">
                        フォロワー
                    </div>
                </div>
            </div>
            <button type="button" class="btn btn-secondary user-edit-btn">編集</button>
        </div>
    </section>

 <%#検索=============================%>
    <section class="search-section">
        <form class="search-container" action="//llamaswill.tumblr.com/search">
            <input id="search-box" type="text" class="search-box" name="q" />
            <label for="search-box"><i class="fas fa-search search-icon"></i></label>
            <input type="submit" id="search-submit" />
        </form>
    </section>
 <%#テーブル=============================%>
    <section class="tables">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">タイトル</th>
                    <th scope="col">URL</th>
                    <th scope="col">概要</th>
                    <th scope="col">カテゴリー</th>
                    <th scope="col">日時</th>
                </tr>
            </thead>
            <tbody>
                <% @contents.each do |content| %>
                <tr>
                    <td scope="row"> <%= content.name %> </td>
                    <td> <%= link_to "URL", content.url %> </td>
                    <td> <%= content.description %> </td>
                    <td><%= content.category %></td>
                    <td><%= content.updated_at.to_s(:datetime_jp) %></td>
                </tr>
                <% end %>
            </tbody>
    </table>
    </section>


 <%#SVG +==========================%>
    <%= link_to new_content_path do %>
        <%= embedded_svg('plus.svg', class: "plus")%>
    <% end %>

 <%#SVG T====================%>
